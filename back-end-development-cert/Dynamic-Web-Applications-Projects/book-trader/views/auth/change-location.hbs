<h2 class="page-header">Change Location</h2>

{{#if errors}}
  {{#each errors}}
    <div class="alert alert-danger">{{msg}}</div>
  {{/each}}
{{/if}}
<form action="/users/change-location" method="post">
    <div class="form-group">
      <label>City</label>
      <input type="text" class="form-control" placeholder="city" name="new-city" minlength="4" maxlength="30" required>
    </div>
    <div class="form-group">
      <label>State</label>
      <input type="text" class="form-control" placeholder="state" name="new-state" minlength="2" maxlength="30" required>
    </div>
    <div class="form-group">
      <label>Country</label>
      <input type="text" class="form-control" placeholder="country" name="new-country" minlength="2" maxlength="30" required>
    </div>
  <button type="submit" class="btn btn-success">Submit</button>
  <a class="btn btn-danger" href="/">Cancel</a>
</form>
